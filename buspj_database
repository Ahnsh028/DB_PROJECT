// 회원 정보 테이블
CREATE TABLE USER (
    user_no int primary key AUTO_INCREMENT,
    name varchar(20),
    id varchar(20),
    pw VARCHAR(20),
    phone int(20)
) ENGINE=INNODB DEFAULT CHARSET=utf8;

//예약 정보 테이블
CREATE TABLE TICKETING (
    t_id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(10),
    bus_no VARCHAR(10),
    personal INT(3),
    departure_date date,
    departure_time time,
    seats VARCHAR(2),
    class VARCHAR(10),
    depature VARCHAR(20),
    arrival VARCHAR(20)
) ENGINE=INNODB DEFAULT CHARSET utf8;

//버스 정보 테이블
CREATE TABLE BUS (
    bus_no VARCHAR(10),
    seats VARCHAR(2),
    class VARCHAR(10)
) ENGINE=INNODB DEFAULT CHARSET utf8;

// 운행 정보 테이블
CREATE TABLE SERVICE (
    bus_no VARCHAR(10),
    departure VARCHAR(50),
    arrival VARCHAR(50),
    charge VARCHAR(50)

) ENGINE=INNODB DEFAULT CHARSET utf8;